<?php 
Class ExtUserRoles {
    
    public static function model($className=__CLASS__)
    {
        return parent::model($className);
    }
    
    /**
     * @return @array roles
     */
    public function getAllRoles(){
        
        $sql = "SELECT * FROM user_roles";
        
        $con = $this->dbConnection;
        $data=$con->createCommand($sql)->queryRow();
        
        return $data;
    }
    
    
}